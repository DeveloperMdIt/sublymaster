# Backend Environment Variables (Production)
# WICHTIG: Diese Datei NICHT in Git committen!
# Kopieren Sie diese Datei auf dem Server als .env und füllen Sie die Werte aus

# Server
NODE_ENV=production
PORT=3000

# JWT Secret (ÄNDERN SIE DIES!)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Database
DATABASE_PATH=./database.db

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# DHL API (falls verwendet)
DHL_API_KEY=YOUR_DHL_API_KEY
DHL_API_SECRET=YOUR_DHL_API_SECRET

# CORS (Frontend URL)
FRONTEND_URL=https://sublymaster.de

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email (optional - für Registrierungs-Mails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@sublymaster.de
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_FROM=Sublymaster <noreply@sublymaster.de>
